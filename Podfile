# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'turntable' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for turntable

  # Firebase auth and database, used to handle user logins and real time session data
  pod 'Firebase'
  pod 'Firebase/Auth'
  pod 'Firebase/Database'
  
  # SwiftyJSON used to extract elements from large Spotify Web API responses
  pod 'SwiftyJSON'
  
  # LBTAComponents are used to simplify the usage of UICollection View and easy element constraint using anchor
  pod 'LBTAComponents'

  target 'turntableUnitTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'turntableUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
